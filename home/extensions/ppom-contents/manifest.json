{
    "manifest_version": 3,
    "name": "PPOM Content Size Checker",
    "version": "1.0",
    "description": "Check webpage HTML source size",
    "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    }
  }